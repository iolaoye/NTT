<% if flash[:notice] != nil %>
  <br>
	<div class="success_alert">
      <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
      <%= flash[:notice] %>
    </div>
<% end %>

<h1 class="buttons_text_h1">
  <%= t('menu.projects') %>
  <div class="normal_text"><%= t('instructions.projects') %></div>
</h1>

  <%= link_to t('project.new_project'), new_project_path %>
  <%= link_to t('project.upload_project'), upload_project_path(0) %>
  <%= link_to t('project.upload_example'), upload_project_path(1) %>
  <table class='gvTableStyle'>
    <tr class='gvHeaderStyle'>
      <th class="gvCellStyleTitle"><%= t('general.name') %></th>
      <th class="gvCellStyleTitle"><%= t('general.description') %></th>
      <th class="gvCellStyleTitle"><%= t('general.actions') %></th>
    </tr>
      <% i=1 %>
    <% @projects.each do |project| %>
      <% if (i % 2  == 0) %>
        <tr class="gvRowStyleEven" style="padding-left:25px">
        <td class="gvCellStyleText"><%= link_to project.name, project %></td>
        <td class="gvCellStyleText"><%= project.description %></td>
        <td>
          <%#= link_to image_tag("view.png"), project %>
          <%= link_to image_tag("download.gif"), download_project_path(project) %> <%#https://design.google.com/icons/%>
          <%= link_to image_tag("edit.png"), edit_project_path(project) %>
          <%= link_to image_tag("delete.png"), project, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
      <% else %>
        <tr class="gvRowStyleOdd" style="padding-left:25px">
        <td class="gvCellStyleText"><%= link_to project.name, project %></td>
        <td class="gvCellStyleText"><%= project.description %></td>
        <td>
          <%#= link_to image_tag("view.png"), project %>
          <%= link_to image_tag("download.gif"), download_project_path(project) %> <%#https://design.google.com/icons/%>
          <%= link_to image_tag("edit.png"), edit_project_path(project) %>
          <%= link_to image_tag("delete.png"), project, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
      <% end %>
      <% i = i + 1 %>
    <% end %>     
  </table>

