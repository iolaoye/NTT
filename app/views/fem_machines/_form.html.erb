<%= form_for([@project, @fem_machine]) do |f| %>
  <% if @fem_machine.errors.any? %>
    <div id="error_explanation">
      <h2><%= t('activerecord.form_errors', :count => @fem_machine.errors.count, :model => t('models.field').downcase) %></h2>
      <ul>
      <% @fem_machine.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :lease_rate %><br>
    <%= f.text_field :lease_rate %>
  </div>
    <%= f.submit :class => "btn btn-primary" %>
    <%= link_to 'Back', project_fem_machines_path(@project), :class => "btn btn-primary" %>
<% end %>
