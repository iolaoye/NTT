<%= form_tag save_bmps_bmps_path, method: :post do %>
  <div class="page-header">
    <h1><%= t('menu.bmps') %></h1>
    <%= submit_tag t("submit.save"), name: "button"%>
    <table class="table table-striped">
      <thead>
        <tr class='gvHeaderStyle'>
          <th><%= t('general.name')%></th>
          <th><%= t('general.select')%></th>
        </tr>
      </thead>

      <% @bmpsublists.each do |bmpsublist| %>
        <tr>
          <td><h4><%= bmpsublist.name %></h4></td>
          <td><%= check_box_tag 'select' %></td>
        </tr>
        <tr >
          <% case bmpsublist.id %>
            <% when 1 %>
				<% if @bmps == nil then %>
					<%@bmp1 = Bmp.new %>
				<%else%>
					<% @bmp1 = @bmps.where(:bmp_id => bmpsublist.id) %>
				<%end%>
				<%if @bmp1.blank? then %>
					<% @bmp1 = Bmp.new %>
				<%end%>
				<td><%= render 'auto_irrigation' %></td>
            <% when 2 %>
				<% if @bmps == nil then %>
					<%@bmp2 = Bmp.new %>
				<%else%>
					<% @bmp2 = @bmps.where(:bmp_id => bmpsublist.id) %>
				<%end%>
				<%if @bmp2.blank? then %>
					<% @bmp2 = Bmp.new %>
				<%end%>
				<td><%= render 'auto_fertigation' %></td>
            <% when 3 %>
				<% if @bmps == nil then %>
					<%@bmp3 = Bmp.new %>
				<%else%>
					<% @bmp3 = @bmps.where(:bmp_id => bmpsublist.id) %>
				<%end%>
				<%if @bmp3.blank? then %>
					<% @bmp3 = Bmp.new %>
				<%end%>
				<td><%= render 'tile_drain' %></td>
            <% when 8 %>
				<% if @bmps == nil then %>
					<%@bmp8 = Bmp.new %>
				<%else%>
					<% @bmp8 = @bmps.where(:bmp_id => bmpsublist.id) %>
				<%end%>
				<%if @bmp8.blank? then %>
					<% @bmp8 = Bmp.new %>
				<%end%>
				<td><%= render 'wetland' %></td>
          <% end %>
        </tr>
      <% end %>
    </table>
  </div>
<% end %>

