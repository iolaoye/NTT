<footer class="footer">
    <nav class="navbar navbar-default navbar-custom">
        <div class="container-fluid">
            <div class="nav navbar-nav navbar-right">
                <ul class="footerright">
                  <%if request.url.include?(url_for=("/projects?")) %>
                    <li><%= image_tag('download.gif') %> Download</li>
                    <li><%= image_tag('edit.png') %> Edit</li>
                    <li><%= image_tag('copy.jpg') %> Copy</li>
                    <li><%= image_tag('delete.png') %> Delete</li>
                  <% end %>
                  <%if request.url.include?(url_for=("/fields?")) || request.url.include?(url_for=("/soils?")) || request.url.include?(url_for=("/layers?")) || request.url.include?(url_for=("/list?")) ||  request.url.include?(url_for=("/scenarios?"))%>  
                      <%if request.url.include?(url_for=("/soils?")) || request.url.include?(url_for=("/apex_soils?"))%>
                          <li><%= image_tag('layers.png') %> Soil Layers</li>
                      <% end %>
                      <li><%= image_tag('edit.png') %> Edit</li>
                      <li><%= image_tag('delete.png') %> Delete</li>
                  <% end %>
                  <%if request.url.include?(url_for=("/grazing_parameters?")) %>
                    <li><%= image_tag('view.png') %> View</li>
                    <li><%= image_tag('edit.png') %> Edit</li>
                    <li><%= image_tag('delete.png') %> Delete</li>
                  <% end %>
                  <%if request.url.include?(url_for=("/apex_controls?")) || request.url.include?(url_for=("/apex_parameters?")) || request.url.include?(url_for=("/subareas?")) || request.url.include?(url_for=("/apex_soils?")) || request.url.include?(url_for=("/apex_layers?")) || request.url.include?(url_for=("/soil_operations?"))%>  
                      <%if request.url.include?(url_for=("/subareas?"))%>
                          <li><%= image_tag('view.png') %> View</li>
                      <% end %>
                      <%if request.url.include?(url_for=("/apex_soils"))%>            
                          <li><%= image_tag('layers.png') %> Soil Layers</li>   
                          <li><%= image_tag('view.png') %> View</li>
                      <% end %>
                      <li><%= image_tag('edit.png') %> Edit</li>
                  <% end %>
                  <%if request.url.include?(url_for=("/sites?"))%>   
                      <li><%= image_tag('view.png') %> View</li>
                      <li><%= image_tag('edit.png') %> Edit</li>
                      <li><%= image_tag('delete.png') %> Delete</li>
                  <% end %>
                </ul>
            </div>
            <div class="nav navbar-nav navbar-left">
              <ul class="footerleft">
                   <li><a href="#" data-toggle="modal" data-target="#instructions"><%= t('footer.instructions')%></a></li>
                   <li><a href="#" data-toggle="modal" data-target="#contact"><%= t('footer.contact_us')%></a></li>
                   <li><%= link_to t("footer.about_ntt"), about_path(:project_id => params[:project_id]) %></li>
                   <li><%= link_to t("footer.help"), help_path("index", :project_id => params[:project_id]) %></li>
                   <% unless ENV["APP_VERSION"] == "modified" %><li><div class="language">Language
                      <span class="tooltiptext">
                        <%= link_to t("languages.english"), :locale=>'en'%><br>
                        <%= link_to t("languages.spanish"), :locale=>'es'%>
                      </span>
                  </li><% end %>
              </ul>
            </div>
        </div>
    </nav>
</footer>

<div class="modal fade" id="instructions" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-body">
        <table>
        <% case controller_name %>
          <% when "projects" %>
              <tr><td><%= t('projpage_html')%></td></tr>
          </table>
        <% when "locations" %>
              <tr><td><%= t('locpage_html')%></td></tr>
        <% when "weathers" %>
              <tr><td><%= t('weathpage_html')%></td></tr>
        <% when "fields" %>
              <tr><td><%= t('fieldpage_html')%></td></tr>
        <% end %>  
        </table>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>


