<% if signed_in? %>
    <div class="navbar navbar-default" style="line-height:0px" id="div1">
        <ul class="nav navbar-nav">
            <% case request.original_url %>
	           <% when /project/, /welcome/, /about/, /contact/, /help/  %>
			       <li><%= link_to t('menu.welcome'), { :controller => "welcomes", :action => "show", :id => "0" } %></li>
   			       <li><%= link_to t('menu.projects'), welcomes_path %></li>
	           <% when /location/, /field/, /watershed/ %>
				   <li><%= link_to t('menu.location'), location_path(session[:location_id]) %></li>
				   <li><%= link_to t('menu.fields'), list_field_path(session[:location_id]) %></li>
				   <li><%= link_to t('menu.watershed'), list_watershed_path(session[:location_id]) %></li>
			   <% when /weather/, /soil/, /scenario/, /layer/, /results/ %>
				   <li><%= link_to t('menu.weather'), edit_weather_path(session[:field_id]) %></li>
				   <li><%= link_to t('menu.soils'), field_soils_field_path(session[:field_id]) %></li>
				   <li><%= link_to t('menu.scenarios'), field_scenarios_field_path(session[:field_id]) %></li>
				   <li><%= link_to t('menu.results'), results_path %></li>
				   <li><%= link_to t('menu.modifications'), modifications_path %></li> 
			   <% when /operation/, /bmp/ %>
				   <li><%= link_to t('menu.managements'), scenario_operations_scenario_path(session[:scenario_id]) %></li>
				   <li><%= link_to t('menu.bmps'), scenario_bmps_scenario_path(session[:scenario_id]) %></li>
			   <% when /modifications/, /apex_control/, /apex_parameters/ %>
			       <li><%= link_to t('menu.control_file'), apex_controls_path %></li>
				   <li><%= link_to t('menu.parameters_file'), apex_parameters_path %></li>
				   <li><%= link_to t('menu.subarea_file'), edit_weather_path(session[:field_id]) %></li>
				   <li><%= link_to t('menu.soil_file'), edit_weather_path(session[:field_id]) %></li>
				   <li><%= link_to t('menu.layer_file'), edit_weather_path(session[:field_id]) %></li>
				   <li><%= link_to t('menu.operation_file'), edit_weather_path(session[:field_id]) %></li>
				   <li><%= link_to t('menu.site'), site_path(session[:field_id]) %></li>
			<% end %>
    			   <li><%= link_to t('menu.signout'), logout_path %></li>
	    </ul>      
    </div>
    <ul class="crumbs">
        <% case request.original_url %>
	        <% when /project/, /welcome/ %>
	        <% when /location/, /field/, /watershed/ %>
		        <li><%=link_to t('menu.projects'), welcomes_path %></li>
		        <li><%=">>"%><%=@project_name%></li>
				<% case request.original_url %>
					<% when /location/ %>
						<li><%= t('menu.location') %></li>
					<% when /field/ %>
						<li><%= t('menu.fields') %></li>
					<% when /watershed/ %>
						<li><%= t('menu.watershed') %></li>
				<% end %>
	        <% when /weather/, /soil/, /scenario/, /layer/, /modifications/, /results/ %>
			    <li><%=link_to t('menu.projects'), welcomes_path %></li>
			    <li><%=">>"%><%=@project_name%></li>
			    <li><%=link_to t('menu.fields'), list_field_path(session[:location_id]) %></li>
			    <li><%=">>"%><%=@field_name%></li>
				<% case request.original_url %>
					<% when /weather/ %>
						<li><%= t('menu.weather') %></li>
					<% when /soil/ %>
						<li><%= t('menu.soils') %></li>
					<% when /scenario/ %>
						<li><%= t('menu.scenarios') %></li>
					<% when /result/ %>
						<li><%= t('menu.results') %></li>
					<% when /layer/ %>
						<li><%= t('soil.layer') %></li>
				<% end %>
		    <% when /apex_control/, /apex_parameters/  %>
			    <li><%=link_to t('menu.projects'), welcomes_path %></li>
			    <li><%=">>"%><%=@project_name%></li>
			    <li><%=link_to t('menu.fields'), list_field_path(session[:location_id]) %></li>
			    <li><%=">>"%><%=@field_name%></li>
				<li><%=link_to t('menu.fields'), list_field_path(session[:location_id]) %></li>
			    <li><%=">>"%><%=@field_name%></li>
				<li><%=link_to t('menu.modifications'), modifications_path %></li>
			    <li><%=">>"%><%=@field_name%></li>
				<% case request.original_url %>
					<% when /apex_control/ %>
						<li><%= t('menu.control_file') %></li>
					<% when /apex_parameters/ %>
						<li><%= t('menu.parameters_file') %></li>
				<% end %>
			<% when /operation/, /bmp/ %>	
			    <li><%=link_to t('menu.projects'), welcomes_path %></li>
			    <li><%=">>"%><%=@project_name%></li>
			    <li><%=link_to t('menu.fields'), list_field_path(session[:location_id]) %></li>
			    <li><%=">>"%><%=@field_name%></li>
			    <li><%=link_to t('menu.scenarios'), field_scenarios_field_path(session[:field_id]) %></li>
			    <li><%=">>"%><%=@scenario_name%></li>
				<% if request.original_url.include? "operation" %>
				    <li><%=">>"%><%=t('menu.managements') %></li>
				<% else %>
				    <li><%=">>"%><%=t('operation.bmp') %></li>
				<% end %>

								    
		<% end %>
	</ul>
<% else %>
	<div class="navbar navbar-default" style="line-height:0px" id="div1">
        <ul class="nav navbar-nav">
    			   <li><%= link_to t('menu.signin'), logout_path %></li>
	    </ul>      
    </div>
<% end %>
