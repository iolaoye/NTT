<li class="<%= controller_name == "locations" ? "active" : "" %>"><%= link_to t('menu.location'), location_path(session[:location_id]) %></li>
<li class="<%= ((controller_name == "fields") || (controller_name == "weathers") || (controller_name == "soils") || (controller_name == "scenarios") || (controller_name == "operations") || (controller_name == "bmps") || (controller_name == "results") || (controller_name == "apex_controls")) ? "active" : "" %>"><%= link_to t('menu.fields'), list_field_path(session[:location_id]) %></li></ul>
<% if field_submenu  %>
  <div class="nav-header">
    <font color="#20689B">Single Field:</font> <%= @field.field_name %>
  </div>
  <ul class="nav nav-pills nav-stacked nav-sidebar-sub">
    <li class="<%= controller_name == "weathers" ? "active" : "" %>">
    <% if controller_name == "weathers" %><div class="header-icon"><span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span></div><% end %>
    <%= link_to t('menu.weather'), edit_weather_path(session[:field_id]) %>
    </li>
    <li class="<%= controller_name == "soils" ? "active" : "" %>">
    <% if controller_name == "soils" %><div class="header-icon"><span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span></div><% end %>
    <%= link_to t('menu.soils'), field_soils_field_path(session[:field_id]) %></li>
    <li class="<%= controller_name == "scenarios" ? "active" : "" %>">
    <% if controller_name == "scenarios" %><div class="header-icon"><span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span></div><% end %>
    <% if ((controller_name == "bmps") || (controller_name == "operations")) %><div class="header-icon"><span class="glyphicon glyphicon-chevron-down" aria-hidden="true"></span></div><% end %>
    <%= link_to t('menu.scenarios'), field_scenarios_field_path(session[:field_id]) %></li>
    <% if scenario_submenu  %>
      <ul class="nav nav-pills nav-stacked nav-sidebar-sub-sub">
        <div class="nav-sub-header"><font color="#20689B">Scenario:</font> <%= @scenario.name %>
        </div>
        <li class="<%= controller_name == "operations" ? "active" : "" %>">
        <% if controller_name == "operations" %><div class="sub-header-icon"><span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span></div><% end %>
        <% if controller_name == "bmps" %><div class="sub-header-icon"><span class="glyphicon glyphicon-chevron-down" aria-hidden="true"></span></div><% end %>
        <%= link_to t('menu.managements'), scenario_operations_scenario_path(session[:scenario_id]) %></li>
      </ul>
      <ul class="nav nav-pills nav-stacked nav-sidebar-sub-sub-sub">
        <li class="<%= controller_name == "bmps" ? "active" : "" %>">
        <% if controller_name == "bmps" %><div class="sub-sub-header-icon"><span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span></div><% end %>
        <%= link_to t('menu.bmps'), scenario_bmps_scenario_path(session[:scenario_id]) %></li>
      </ul>
    <% end %>
    <li class="<%= controller_name == "results" ? "active" : "" %>">
    <% if controller_name == "results" %><div class="header-icon"><span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span></div><% end %>
    <%= link_to t('menu.results'), results_path %></li>
    <li class="<%= controller_name == "apex_controls" ? "active" : "" %>">
    <% if controller_name == "apex_controls" %><div class="header-icon"><span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span></div><% end %>
    <%= link_to t('menu.apex_file'), apex_controls_path %></li></ul>
<% end %>
<ul class="nav nav-pills nav-stacked nav-sidebar">
  <li class="<%= controller_name == "watersheds" ? "active" : "" %>"><%= link_to t('menu.watershed'), list_watershed_path(session[:location_id]) %></li>
</ul>
<ul class="nav nav-pills nav-stacked nav-sidebar-sub">
  <li><%= link_to t('menu.results') + "-" + t('menu.watershed'), results_path(:button => t('result.summary')) %></li>
</ul>
