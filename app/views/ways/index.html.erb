  </tr>

<% @ways.each do |way| %>
  <tr>
    <td><%= way.way_name %></td>
    <td><%= link_to 'Show', way %></td>
    <td><%= link_to 'Edit', edit_way_path(way) %></td>
    <td><%= link_to 'Destroy', way, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

