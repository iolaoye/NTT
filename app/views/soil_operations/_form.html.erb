<%= form_for([@project, @field, @soil_operation]) do |f| %>
  <% if @soil_operation.errors.any? %>
    <div id="error_explanation">
      <h2><%= t('activerecord.form_errors', :count => @soil_operation.errors.count, :model => t('models.soil_operation').downcase) %></h2>

      <ul>
      <% @soil_operation.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label t('datetime.prompts.year') + " " + ':' %>
    <%= f.number_field :year, :class => "gvTitleStyleNumber" %>
  </div>
  <div class="field">
    <%= f.label t('datetime.prompts.month') + " " + ':' %>
    <%= f.number_field :month, :class => "gvTitleStyleNumber" %>
  </div>
  <div class="field">
    <%= f.label t('datetime.prompts.day') + " " + ':' %>
    <%= f.number_field :day, :class => "gvTitleStyleNumber" %>
  </div>
  <div class="field">
    <%= f.label t('scenario.operation') + " " + ':' %>
    <%= f.number_field :apex_operation, :class => "gvTitleStyleNumber" %>
  </div>
  <div class="field">
    <%= f.label :'Tractor:' %>
    <%= f.number_field :tractor_id, :class => "gvTitleStyleNumber" %>
  </div>
  <div class="field">
    <%= f.label t('operation.crop') + " " + ':' %>
    <%= f.number_field :apex_crop, :class => "gvTitleStyleNumber" %>
  </div>
  <div class="field">
    <%= f.label t('general.type') + " " + ':' %>
    <%= f.number_field :type_id, :class => "gvTitleStyleNumber" %>
  </div>
  <div class="field">
    <%= f.label :'OPV1:' %>
    <%= f.number_field :opv1, :class => "gvTitleStyleNumber", :step => '0.01' %>
  </div>
  <div class="field">
    <%= f.label :'OPV2:' %>
    <%= f.number_field :opv2, :class => "gvTitleStyleNumber", :step => '0.01' %>
