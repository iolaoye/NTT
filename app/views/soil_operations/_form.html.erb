  </div>
  <div class="field">
    <%= f.label :'OPV4:' %>
    <%= f.number_field :opv4, :class => "gvTitleStyleNumber", :step => '0.01' %>
  </div>
  <div class="field">
    <%= f.label :'OPV5:' %>
    <%= f.number_field :opv5, :class => "gvTitleStyleNumber", :step => '0.01' %>
  </div>
  <div class="field">
    <%= f.label :'OPV6:' %>
    <%= f.number_field :opv6, :class => "gvTitleStyleNumber", :step => '0.01' %>
  </div>
  <div class="field">
    <%= f.label :'OPV7:' %>
    <%= f.number_field :opv7, :class => "gvTitleStyleNumber", :step => '0.01' %>
  </div>
  <div class="actions">
    <%= f.submit t('submit.update') + " " + t('scenario.operation'), :class => "btn btn-primary" %>
	  <%= link_to t('general.back'), project_field_soil_operations_path, :class => "btn btn-primary" %>
  </div>
<% end %>
