<h1>Listing apex_controls</h1>

<table class='gvTableStyle'>
  <tr class='gvHeaderStyle'>
    <th>Control</th>
    <th>Code</th>
    <th>Line</th>
    <th>Column</th>
    <th>Value</th>
    <th>Low Range</th>
    <th>High Range</th>
    <th></th>
  </tr>

<% i=1 %>
<% @apex_controls.each do |apex_control| %>
<% if (i % 2  == 0) %>
<tr class="gvRowStyleEven">
  <% else %>
  <tr class="gvRowStyleOdd">
    <% end %>
    <% i = i + 1 %>
    <tr class="gvRowStyle">
      <td class="gvCellStyleNumber"><%= apex_control.control_id %></td>
      <td class="gvCellStyleText"><%= apex_control.control.code %></td>
      <td class="gvCellStyleNumber"><%= apex_control.control.line %></td>
      <td class="gvCellStyleNumber"><%= apex_control.control.column %></td>
      <td class="gvCellStyleNumber"><%= apex_control.value %></td>
      <td class="gvCellStyleNumber"><%= apex_control.control.range_low %></td>
      <td class="gvCellStyleNumber"><%= apex_control.control.range_high %></td>
      <td><%= link_to image_tag("edit.png"), edit_apex_control_path(apex_control), title: t('general.edit') %></td>
  </tr>
<% end %>
</table>
