<div class="page-header"><h1><%= t('menu.control_file') %></h1></div>

<% if flash[:notice] != nil %>
    <div class="alert alert-info" role="alert">
      <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
      <%= flash[:notice] %>
    </div>
<% end %>

<%= link_to t('menu.control_file'), project_field_apex_controls_path(@project, @field), :class => 'btn btn-primary' %>
<%= link_to t('menu.parameters_file'), project_field_apex_parameters_path(@project, @field), :class => 'btn btn-default' %>
<%= link_to t('menu.subarea_file'), project_field_subareas_path(@project, @field), :class => 'btn btn-default' %>
<%= link_to t('menu.apex_soil'), project_field_apex_soils_path(@project, @field), :class => 'btn btn-default' %>
<%= link_to t('menu.operation_file'), project_field_soil_operations_path(@project, @field), :class => 'btn btn-default' %>
<%= link_to t('menu.site'), project_field_sites_path(@project, @field), :class => 'btn btn-default' %><br>
<%= link_to t('activerecord.models.apex.download') + " " + t('menu.apex_file'), {:action => :download}, :method => :post, :class => 'btn btn-default' %>
<%= link_to t('activerecord.models.apex.download') + " " + t('menu.aplcat_file'), aplcat_parameters_download_path, :method => :post, :class => 'btn btn-default' %>


<br><br>
  <%= link_to t("general.reset_to"), reset_project_field_apex_control_path(@project, @field, 0), :class => 'btn btn-primary' %>
    <br><br>
<div class="table-responsive">
  <div class="panel panel-default">
    <table class="table table-striped">
      <thead>
        <tr>
          <th><%= t('menu.control_file') %></th>
          <th><%= t('apex.code') %></th>
          <th><%= t('apex.line') %></th>
          <th><%= t('apex.column') %></th>
          <th><%= t('apex.value') %></th>
          <th><%= t('apex.low_range') %></th>
          <th><%= t('apex.high_range') %></th>
          <th><%= t('general.actions')%></th>
        </tr>
      </thead>
      <tbody>

<% i=1 %>
<% @apex_controls.each do |apex_control| %>
	  <% if i % 2 == 0 %>
        <tr class="gvRowStyleEven">
	  <% else %>
	    <tr class="gvRowStyleOdd">
	  <% end %>
      <td><%= apex_control.control_description_id %></td>
      <td><%= apex_control.control_description.code %></td>
      <td><%= apex_control.control_description.line %></td>
      <td><%= apex_control.control_description.column %></td>
      <td><%= apex_control.value %></td>
      <td><%= apex_control.control_description.range_low %></td>
      <td><%= apex_control.control_description.range_high %></td>
      <td><%= link_to image_tag("edit.png"), edit_project_field_apex_control_path(@project, @field, apex_control), title: t('general.edit') %></td>
      <% i+=1 %>
<% end %>
</tr>
    </tbody>
  </table>
</div>
</div>


<br>
