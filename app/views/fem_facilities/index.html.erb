<p id="notice"><%= notice %></p>

<div class="page-header"><h1><%=t("fem.facility")%></h1></div>
  <div class="table-responsive">
    <div class="panel panel-default">
      <table class='table table-striped'>
        <thead>
          <tr>
            <th>Name</th>
            <th>Lease Rate</th>
            <th>New Price</th>
            <th>New Life</th>
            <th>Current Price</th>
            <th>Life Remai</th>
            <th>Maint Coeff</th>
            <th>Loan Int. Rate</th>
            <th>Length Loan</th>
            <th>Int. Rate Equity</th>
            <th>Proportion Debt</th>
            <th>Year</th>
            <th><%=t('general.actions')%></th>
          </tr>
        </thead>
        <tbody>
          <% @fem_facilities.each do |fem_facility| %>
            <tr>
              <td><%= fem_facility.name %></td>
              <td><%= fem_facility.lease_rate %></td>
              <td><%= fem_facility.new_price %></td>
              <td><%= fem_facility.new_life %></td>
              <td><%= fem_facility.current_price %></td>
              <td><%= fem_facility.life_remaining %></td>
              <td><%= fem_facility.maintenance_coeff %></td>
              <td><%= fem_facility.loan_interest_rate %></td>
              <td><%= fem_facility.length_loan %></td>
              <td><%= fem_facility.interest_rate_equity %></td>
              <td><%= fem_facility.proportion_debt %></td>
              <td><%= fem_facility.year %></td>
              <td><%= link_to image_tag("edit.png"), edit_project_fem_facility_path(@project, fem_facility) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<br>