<h1>Listing layers</h1>
<%= link_to t('general.new') + ' ' + t('soil.layer'), new_layer_path %>
<%= link_to t('general.back'), field_soils_field_path(session[:field_id]) %>

<table class='gvTableStyle'>
  <tr class='gvHeaderStyle'>
    <th>Depth</th>
    <th>Soil p</th>
    <th>Bulk Density</th>
    <th>Sand</th>
    <th>Silt</th>
    <th>Clay</th>
    <th>Organic Matter</th>
    <th>Ph</th>
    <th><%=t('general.actions')%></th>
  </tr>

  <% @layers.each do |layer| %>
    <tr class="gvRowStyle">
      <td><%= layer.depth %></td>
      <td><%= layer.soil_p %></td>
      <td><%= layer.bulk_density %></td>
      <td><%= layer.sand %></td>
      <td><%= layer.silt %></td>
      <td><%= layer.clay %></td>
      <td><%= layer.organic_matter %></td>
      <td><%= layer.ph %></td>
      <td>
         <%= link_to image_tag("edit.png"), edit_layer_path(layer), title: t('general.edit') %>
         <%= link_to image_tag("delete.png"), layer, title: t('general.delete'), method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
</table>