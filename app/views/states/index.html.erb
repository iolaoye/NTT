<h1>Listing states</h1>

<table>
  <tr>
    <th>State Id</th>
    <th>State name</th>
    <th>State code</th>
    <th>State Abrebbiation</th>
    <th>Status</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @states.each do |state| %>
    <tr>
      <td><%= check_box_tag :selected, 'selected' %></td>
      <td><%= state.state_name %></td>
      <td><%= state.state_code %></td>
      <td><%= state.state_abbreviation %></td>
      <td><%= state.status %></td>
      <!--<td><%= link_to t('general.show'), state %></td>
      <td><%= link_to t('general.edit'), edit_state_path(state) %></td>
      <td><%= link_to 'Destroy', state, method: :delete, data: { confirm: t('general.confirm') } %></td>-->
    </tr>
    <% @counties = County.where(:state_id => state.id) %>
    <tr style='display:none'><td><%= render 'counties_form' %></td></tr>
  <% end %>
</table>

