<%# if !signed_in? %>
  <h2><%= t('submit.login')%></h2>
  <%= form_tag session_path do %>
    <% if flash[:alert] %>
    <div class="flash_alert">
      <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
      <%= flash[:alert] %>
    </div>
    <% end %>
    <div class="field">
      <%= label_tag (t('.email')) %><br />
      <%= text_field_tag :email %>
    </div>
    <div class="field">
      <%= label_tag (t('.password')) %><br />
      <%= password_field_tag :password %>
    </div>
    <div class="actions">
      <%= submit_tag t('submit.login') %>
      <%= link_to t('.new_user'), users_new_path, method: :get, :class => "green_button" %>
    </div>
  <% end %>
<%# end %>