<%= form_for [@project, @field] do |f| %>
  <% if @field.errors.any? %>
    <div id="error_explanation">
      <h2><%= t('activerecord.form_errors', :count => @field.errors.count, :model => t('models.field').downcase) %></h2>
      <ul>
      <% @field.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if ENV["APP_VERSION"] == "modified" %>
    <div class="field" title="Name of Field">
      <%= f.label t('field.field_name') %>
      <%= f.text_field :field_name %>
    </div>
    <div class="field" title="Field Area (Ac.). Must be greater than 0.">
      <%= f.label t('field.field_area') %>
      <%= f.number_field :field_area, :class => 'gvTitleStyleNumber', :step => "any" %>
    </div>
    <div class="field" title="Field Depth">
      <%= f.label t('field.depth') + " (ft)"%>
       <%= f.number_field :depth, :min => 0.001, :class => 'gvTitleStyleNumber', :step => "any" %>
    </div>
        <div class="field" title="Tile Bioreactors">
      <%= f.label t('field.tile_bioreactors') %>
      <%= f.check_box :tile_bioreactors %>
    </div>
    <div class="field" title="Drainage Water Management">
      <%= f.label t('field.drainage_water_management') %>
      <%= f.check_box :drainage_water_management %>
    </div>    
    <div class="actions">
      <%= f.submit :class => "btn btn-primary" %>
      <%= link_to t('general.back'), project_fields_path(@project), :class => "btn btn-primary" %>
    </div>

    <!-- <div class="field">
    <%= f.label t('field.field_avg_slope') %>
      <%= f.number_field :field_average_slope, :class => 'gvTitleStyleNumber', :step => "any", disabled: true  %>  <a href="#" id="trigger">[?]</a>
    </div>
    <div class="field">
      <%= f.label t('field.coordinate') + " (long, lat)" %><br>
      <%= f.text_area :coordinates, :required => 'true', disabled: true %>
    </div>
    <div class="actions">
      <%= f.submit :class => "btn btn-primary" %>
  	<%= link_to t('general.back'), project_fields_path(@project), :class => "btn btn-primary" %>
    </div> -->
  <% else %>
    <div class="field" title="Name of Field">
      <%= f.label t('field.field_name') %>
      <%= f.text_field :field_name %>
    </div>
    <div class="field" title="Field Area (Ac.). Must be greater than 0.">
      <%= f.label t('field.field_area') %>
      <%= f.number_field :field_area, :class => 'gvTitleStyleNumber', :step => "any" %>
    </div>
    <div class="field" title="Field Depth">
      <%= f.label t('field.depth') + " (ft)"%>
       <%= f.number_field :depth, :min => 0.001, :class => 'gvTitleStyleNumber', :step => "any" %>
    </div>
        <div class="field" title="Tile Bioreactors">
      <%= f.label t('field.tile_bioreactors') %>
      <%= f.check_box :tile_bioreactors %>
    </div>
    <div class="field" title="Drainage Water Management">
      <%= f.label t('field.drainage_water_management') %>
      <%= f.check_box :drainage_water_management %>
    </div>    
    <div class="actions">
      <%= f.submit :class => "btn btn-primary" %>
      <%= link_to t('general.back'), project_fields_path(@project), :class => "btn btn-primary" %>
    </div>

    <!-- <div class="field">
    <%= f.label t('field.field_avg_slope') %>
      <%= f.number_field :field_average_slope, :class => 'gvTitleStyleNumber', :step => "any", :disabled => true %>
    </div>
    </div>
    <div class="field">
      <%= f.label t('field.coordinate') + " (long, lat)" %><br>
      <%= f.text_area :coordinates, :readonly => true %>
    </div> -->
  <% end %>
<% end %>

<script>
  $(function() {
  var moveLeft = -300;
  var moveDown = -100;
  $('a#trigger').hover(function(e) {
    $('div#pop-up').show();
  }, function() {
    $('div#pop-up').hide();
  });
  $('a#trigger').mousemove(function(e) {
    $("div#pop-up").css('top', e.pageY + moveDown).css('left', e.pageX + moveLeft);
  });
});
    </script>
