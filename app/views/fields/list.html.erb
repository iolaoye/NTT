<h1>Listing fields</h1>

<%= link_to 'New Field', new_field_path %>
<table class='gvTableStyle'>
  <tr class='gvHeaderStyle'>
    <th>Field name</th>
    <th>Field area</th>
    <th>Field average slope</th>
    <th>Location</th>
    <th>Field type</th>
    <th>Actions</th>
  </tr>

<% @fields.each do |field| %>
  <tr class="gvRowStyle">
    <td><%= link_to field.field_name, field %></td>
    <td><%= field.field_area %></td>
    <td><%= field.field_average_slope %></td>
    <td></td>
    <td><%= field.field_type %></td>
    <td>
      <%= link_to image_tag("view.png"), field %>
      <%= link_to image_tag("edit.png"), edit_field_path(field) %>
      <%= link_to image_tag("delete.png"), field, method: :delete, data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
<% end %>
</table>

<br />
