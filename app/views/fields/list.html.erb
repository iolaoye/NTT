<h1><%= t('field.field_title')%></h1>

<%= link_to t('field.new_field'), new_field_path %>
<table class='gvTableStyle'>
  <tr class='gvHeaderStyle'>
    <th><%= t('field.field_name')%></th>
    <th class="numbers"><%= t('field.field_area')%></th>
    <th class="numbers"><%= t('field.field_avg_slope')%></th>
    <th><%= t('general.actions')%></th>
  </tr>

<% @fields.each do |field| %>
  <tr class="gvRowStyle">
    <td><%= link_to field.field_name, field %></td>
    <td class="numbers"><%= field.field_area %></td>
    <td class="numbers"><%= field.field_average_slope %></td>
    <td>
      <%#= link_to image_tag("view.png"), field %>
      <%= link_to image_tag("edit.png"), edit_field_path(field), title: t('general.edit') %>
      <%= link_to image_tag("delete.png"), field, title: t('general.delete'), method: :delete, data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
<% end %>
</table>

<br />
