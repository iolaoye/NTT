<div><p id="notice"><%= notice %></p></div>

<div>
  <p><strong>Title:</strong><%=h @post.title %></p>
  <p><strong>Body:</strong><%=h @post.body %></p>
</div>

<div>
  <h2>Comments</h2>
  <% @post.comments.each do |c| %>
    <p><b><%=h c.name %> said:</b>(<%= time_ago_in_words(c.created_at) %> ago)</p>
    <p><%=h c.body %></p>
  <% end %>
</div>

<div>
  <%= form_for ([@post, @comment]) do |f| %>
    <p>
      <%= f.label :name, "Author" %><%= f.label :name, User.find(session[:user_id]).name %><br />
      <%= f.label :body, "Comment Description" %><br />
      <%= f.text_area :body,  :rows => 10, :cols => 100 %>
    </p>
    <div  class="actions">
    <%= f.submit "Add Comment" %>
    <%= link_to 'Back', posts_path %>
  </div>
  <% end %>
</div>
