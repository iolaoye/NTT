<% if params[:notice] != nil then %>
  <% notice = params[:notice] %>
<% end %>
<p id="notice"><%= notice %></p>

<h1>Posts</h1>
<%= form_for :post, :url => {:action => "index"}, method: :post do |f|%>
  <div>
    <%= f.text_field :search, size: 80 %>
    <%= f.submit "Search" %>
  </div>
<% end %>

<% if !(session[:user_id] == nil or session[:user_id] == "") %>
  <%= link_to 'New Post', new_post_path, :class => "btn btn-primary" %>
<% end %>



