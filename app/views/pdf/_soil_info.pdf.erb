<% @soils = Soil.where(:field_id => @field.id, :selected => true) %>

<div class="group_header"><strong><%=t('pdf.soil_info')%></strong></div>
<table class='table_fill'  style='margin-left: 40px'>
    <thead style=" display: table-row-group">
        <tr class="first_tr">
            <th class="table_head"></th>
            <th class="table_head" style="text-align: left">
                <%=t('pdf.name')%>
            </th>
            <th class="table_head"><%=t('pdf.symbol')%></th>
            <th class="table_head"><%=t('pdf.group')%></th>
            <th class="table_head"><%=t('pdf.albedo')%></th>
            <th class="table_head"><%=t('pdf.slope')%></th>
            <th class="table_head"><%=t('pdf.percentage')%></th>
        </tr>
    </thead>
    <tbody>
        <% i=1 %>
        <% @soils.each do |soil| %>
            <% if (i % 2  == 0) %>
                <tr class="table_row_even">
                    <td class="row text"><%= 'Soil #' + i.to_s + ":" %> </td>
                    <td class="row text"><%= soil.name %></td>
                    <td class="row text"><%= soil.symbol %></td>
                    <td class="row text"><%= soil.group %></td>
                    <td class="row number"><%= sprintf("%.2f", soil.albedo) unless soil.albedo == nil %></td>
                    <td class="row number"><%= sprintf("%.2f", soil.slope) unless soil.slope == nil %></td>
                    <td class="row number"><%= sprintf("%.2f", soil.percentage) unless soil.percentage == nil %></td>
                </tr>
            <% else %>
                <tr class="table_row_odd">
                    <td class="row text"><%= 'Soil #' + i.to_s + ":" %> </td>
                    <td class="row text"><%= soil.name %></td>
                    <td class="row text"><%= soil.symbol %></td>
                    <td class="row text"><%= soil.group %></td>
                    <td class="row number"><%= sprintf("%.2f", soil.albedo) unless soil.albedo == nil %></td>
                    <td class="row number"><%= sprintf("%.2f", soil.slope) unless soil.slope == nil %></td>
                    <td class="row number"><%= sprintf("%.2f", soil.percentage) unless soil.percentage == nil %></td>
                </tr>
            <% end %>
            <% i = i + 1 %>
        <% end %>
    </tbody>
</table>
<div class="page-break"></div>
</br>