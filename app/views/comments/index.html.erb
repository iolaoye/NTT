<p id="notice"><%= notice %></p>

<div class="page-header"><h1><%= "Issue Comment" %></h1></div>

<%= link_to 'New Comment', new_comment_path(:issue_id => @issue_id), class: "btn btn-primary" %>
<%= link_to t('general.back'), issues_path(:dev => session[:dev]), :class => "btn btn-primary" %><br>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Number</th>
      <th>Comment</th>
      <th>Posted</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.id %></td>
        <td><%= comment.description %></td>
        <td><%= comment.created_at %></td>
        <td><%= link_to 'Show', comment %></td>
        <td><%= link_to 'Edit', edit_comment_path(comment) %></td>
        <td><%= link_to 'Destroy', comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>