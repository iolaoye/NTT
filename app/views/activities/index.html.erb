  <tr>
    <td><%= activity.name %></td>
    <td><%= activity.code %></td>
    <td><%= activity.abbreviation %></td>
    <td><%= activity.spanish_name %></td>
    <td><%= activity.apex_code %></td>
    <td><%= link_to t('general.show'), activity %></td>
    <td><%= link_to t('general.edit'), edit_activity_path(activity) %></td>
