<% if notice != nil %>
  <div class="success_alert">
    <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
    <%= notice %>
  </div>
<% end %>

<div class="actions">
  <%= link_to t('general.edit'), edit_user_path(@user), :class => "btn btn-primary" %>
  <%= link_to t('general.back'), users_path, :class => "btn btn-primary" %>
</div>
