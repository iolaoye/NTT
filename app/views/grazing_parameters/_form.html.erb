<%= form_for [@project, @field, @scenario, @grazing_parameter] do |f| %>
  <% if @grazing_parameter.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@grazing_parameter.errors.count, "error") %> prohibited this grazing_parameter from being saved:</h2>
      <ul>
	    <% @grazing_parameter.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
      </ul>
    </div>
  <% end %>
  <br>
  <div>
    <%=  t('graze.forage') %><br>
    <%= f.radio_button :forage, "1"%> <%= t('graze.yes') %><br>
    <%= f.radio_button :forage, "2"%> <%= t('graze.no') %><br>
  </div>
  <!--<div class="field">
    <%=  t('graze.total') %><br>
    <%= f.number_field :code, min: 0, max: 10 %>
  </div>--><br>
  <table class="table table-striped">
    <tbody>
      <td style="cursor: pointer"> <h4> DATA ON FORAGE/HAY </h4></td>
    </tbody>
      <tbody class="toggable borders">
        <tr>
          <td class="indent" colspan="2">
            <div class="field">
              <%= t('graze.code_for_html') %>
              <%= f.number_field :code, class: 'gvTitleStyleNumber', :title => t('aplcat_tooltip.graze_code'), min: 1, max: 177, :value => 18 %>
            </div>
          </td>
        </tr>
        <tr>
          <td class="indent" colspan="2">
            <div class="field">
              <%= t('graze.sjd') %>
              <%= f.number_field :starting_julian_day, class: 'gvTitleStyleNumber', min: 1, max: 365, :value => 1 %>
            </div>
          </td>
        </tr>
        <tr>
          <td class="indent" colspan="2">
            <div class="field">
              <%= t('graze.ejd') %>
              <%= f.number_field :ending_julian_day, class: 'gvTitleStyleNumber', min: 1, max: 366, :value => 14  %>
            </div>
          </td>
        </tr>
        <tr>
          <td class="indent" colspan="2">
            <div class="field">
              <%= t('graze.dmi_code') %><br>
              <%#= radio_button_tag :for_button, "1"%> <%#= t('graze.dmi_code1') %>
              <%#= radio_button_tag :for_button, "2"%> <%#= t('graze.dmi_code2') %>
              <%= select_tag "for_button", options_for_select(basis_dmi, :selected => 0), {:prompt => t("Select the basis of Intake"), :required => true} %><br>
            </div>
          </tr>
        </td>
        <tr>
          <td class="indent" colspan="2">
            <div class="field">
              <%= t('graze.dmi_cows') %>
              <%= f.number_field :for_dmi_cows, class: 'gvTitleStyleNumber', :title => t('aplcat_tooltip.dmis'), :required => true, :step => "0.1", :value => 1.8 %>
            </div>
          </tr>
        </td>
        <tr>
          <td class="indent" colspan="2">
            <div class="field">
              <%= t('graze.dmi_bulls') %>
              <%= f.number_field :for_dmi_bulls, class: 'gvTitleStyleNumber', :title => t('aplcat_tooltip.dmis'), :required => true, :step => "0.1", :value => 1.6 %>
            </div>
          </tr>
        </td>
        <tr>
          <td class="indent" colspan="2">
            <div class="field">
              <%= t('graze.dmi_heifers') %>
              <%= f.number_field :for_dmi_heifers, class: 'gvTitleStyleNumber', :title => t('aplcat_tooltip.dmis'), :required => true, :step => "0.1", :value => 1.6 %>
            </div>
          </tr>
        </td>
        <tr>
          <td class="indent" colspan="2">
            <div class="field">
              <%= t('graze.dmi_calves') %>
              <%= f.number_field :for_dmi_calves, class: 'gvTitleStyleNumber', :title => t('aplcat_tooltip.dmis'), :required => true, :step => "0.1", :value => 1.6 %>
            </div>
          </tr>
        </td>
        <tr>
          <td class="indent" colspan="2">
            <div class="field">
              <%= t('graze.dmi_rheifers') %>
              <%= f.number_field :for_dmi_rheifers, class: 'gvTitleStyleNumber', :title => t('aplcat_tooltip.dmis'), :required => true, :step => "0.1", :value => 1.6 %>
            </div>
          </td>
        </tr>
        <tr>
          <td class="indent" colspan="2">
            <div class="field">
              <%= t('graze.gwff') %>
              <%= f.number_field :green_water_footprint, class: 'gvTitleStyleNumber', min: 1.0, max: 10000, step: 0.1, :value => 1384 %>
            </div>
          </tr>
        </td>
      </tbody>
  </table>

  <table class="table table-striped">
    <tbody>
      <td style="cursor: pointer"> <h4> DATA ON SUPPLEMENT/HAY </h4></td>
    </tbody>
      <tbody class="toggable borders">
        <tr>
          <td class="indent" colspan="2">
            <div class="field">
              <%= t('graze.code_supp_html') %>
              <%= f.number_field :dmi_code, class: 'gvTitleStyleNumber', :title => t('aplcat_tooltip.graze_code'), min: 1, max: 177, :value => 135 %>
            </div>
          </td>
        </tr>
        <tr>
          <td class="indent" colspan="2">
            <div class="field">
              <%= t('graze.dmi_code') %><br>
              <%#= radio_button_tag :supplement_button, "1"%> <%#= t('graze.dmi_code1') %>
              <%#= radio_button_tag :supplement_button, "2"%> <%#= t('graze.dmi_code2') %>
              <%= select_tag "supplement_button", options_for_select(basis_dmi, :selected => 0), {:prompt => t("Select the basis of Intake"), :required => true} %><br>
            </div>
          </tr>
          <tr>
            <td class="indent" colspan="2">
              <div class="field">
                <%= t('graze.dmi_cows') %>
                <%= f.number_field :dmi_cows, class: 'gvTitleStyleNumber', :title => t('aplcat_tooltip.dmis'), :required => true, :step => "0.1", :value => 0.2 %>
              </div>
            </tr>
          </td>
          <tr>
            <td class="indent" colspan="2">
              <div class="field">
                <%= t('graze.dmi_bulls') %>
                <%= f.number_field :dmi_bulls, class: 'gvTitleStyleNumber', :title => t('aplcat_tooltip.dmis'), :required => true, :step => "0.1", :value => 0.2 %>
              </div>
            </tr>
          </td>
          <tr>
            <td class="indent" colspan="2">
              <div class="field">
                <%= t('graze.dmi_heifers') %>
                <%= f.number_field :dmi_heifers, class: 'gvTitleStyleNumber', :title => t('aplcat_tooltip.dmis'), :required => true, :step => "0.1", :value => 0.2 %>
              </div>
            </tr>
          </td>
          <tr>
            <td class="indent" colspan="2">
              <div class="field">
                <%= t('graze.dmi_calves') %>
                <%= f.number_field :dmi_calves, class: 'gvTitleStyleNumber', :title => t('aplcat_tooltip.dmis'), :required => true, :step => "0.1", :value => 0.0 %>
              </div>
            </tr>
          </td>
          <tr>
            <td class="indent" colspan="2">
              <div class="field">
                <%= t('graze.dmi_rheifers') %>
                <%= f.number_field :dmi_rheifers, class: 'gvTitleStyleNumber', :title => t('aplcat_tooltip.dmis'), :required => true, :step => "0.1", :value => 0.2 %>
              </div>
            </td>
          </tr>
          <tr>
            <td class="indent" colspan="2">
              <div class="field">
                <%= t('graze.gwfs') %>
                <%= f.number_field :green_water_footprint_supplement, class: 'gvTitleStyleNumber', min: 1.0, max: 10000, step: 0.1, :value => 1525 %>
              </div>
            </tr>
          </td>
    </tbody>
  </table>

  <div class="actions">
    <%= f.submit:class => "btn btn-primary" %>
    <%= link_to 'Back', project_field_scenario_grazing_parameters_path %>
  </div>
<% end %>
