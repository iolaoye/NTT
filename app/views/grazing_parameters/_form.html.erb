        </tr>
      </td>
      <tr>
        <td class="indent" colspan="2">
          <div class="field">
            <%= t('graze.dmi_bulls') %><br>
            <%= f.number_field :for_dmi_bulls, :title => t('aplcat_tooltip.dmis'), :step => "0.1" %>
          </div>
        </tr>
      </td>
      <tr>
        <td class="indent" colspan="2">
          <div class="field">
