            <%= f.number_field :for_dmi_rheifers, :title => t('aplcat_tooltip.dmis'), :type => "number" %>
          </div>
        </td>
      </tr>
      <tr>
        <td class="indent" colspan="2">
          <div class="field">
            <%= t('graze.gwf') %><br>
            <%= f.number_field :green_water_footprint, min: 1.0, max: 10000, step: 0.1 %>
          </div>
        </tr>
      </td>
    </tbody>
</table>

