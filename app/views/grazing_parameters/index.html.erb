<div class="page-header"><h1><%= t("aplcat.animal_feed_parameters") %></h1></div>
<td><%= link_to t('aplcat.supplement_parameters'), project_field_scenario_supplement_parameters_path(@project, @field, @scenario), :title => t('aplcat_tooltip.go_to_sp'), :class => 'btn btn-primary' %></td>
<td><%= link_to t('menu.aplcat') + " " + t('menu.results'), project_field_scenario_aplcat_results_path(@project, @field, @scenario), :title => t('aplcat_tooltip.go_to_ar'), :class => 'btn btn-primary' %></td><br/><br/>
<div class="table-responsive">
  <div class="panel panel-default">
    <table class="table table-striped">
      <thead>
        <tr class='gvHeaderStyle'>
          <th class="gvCellStyleTitle">Forage ID</th>
          <th class="gvCellStyleTitle">Starting julian day</th>
          <th class="gvCellStyleTitle">Ending julian day</th>
          <th class="gvCellStyleTitle">Forage DMI cows</th>
          <th class="gvCellStyleTitle">Forage DMI bulls</th>
          <th class="gvCellStyleTitle">Forage DMI heifers</th>
          <th class="gvCellStyleTitle">Forage DMI calves</th>
          <th class="gvCellStyleTitle">Forage DMI replacement heifers</th>
          <th class="gvCellStyleTitle">Green water footprint for forage</th>
          <th class="gvCellStyleTitle">Supplement ID</th>
          <th class="gvCellStyleTitle">Supplement DMI cows</th>
          <th class="gvCellStyleTitle">Supplement DMI bulls</th>
          <th class="gvCellStyleTitle">Supplement DMI heifers</th>
          <th class="gvCellStyleTitle">Supplement DMI calves</th>
          <th class="gvCellStyleTitle">Supplement DMI replacement heifers</th>
          <th class="gvCellStyleTitle">Green water footprint for supplement</th>
          <th class="gvCellStyleTitle"><%= t('general.actions') %></th>
        </tr>
      </thead>

      <tbody>
        <% i=1 %>
        <% @grazing_parameters.each do |grazing_parameter| %>
  				<% if (i % 2 == 0) %>
  					<tr class="gvRowStyleEven">
  				<% else %>
  					<tr class="gvRowStyleOdd">
  				<% end %>
          <td><%= grazing_parameter.code %></td>
          <td><%= grazing_parameter.starting_julian_day %></td>
          <td><%= grazing_parameter.ending_julian_day %></td>
          <td><%= grazing_parameter.for_dmi_cows %></td>
          <td><%= grazing_parameter.for_dmi_bulls %></td>
          <td><%= grazing_parameter.for_dmi_heifers %></td>
          <td><%= grazing_parameter.for_dmi_calves %></td>
          <td><%= grazing_parameter.for_dmi_rheifers %></td>
          <td><%= grazing_parameter.green_water_footprint %></td>
          <td><%= grazing_parameter.dmi_code %></td>
          <td><%= grazing_parameter.dmi_cows %></td>
          <td><%= grazing_parameter.dmi_bulls %></td>
          <td><%= grazing_parameter.dmi_heifers %></td>
          <td><%= grazing_parameter.dmi_calves %></td>
          <td><%= grazing_parameter.dmi_rheifers %></td>
          <td><%= grazing_parameter.green_water_footprint_supplement %></td>
          <td>
              <%= link_to image_tag("view.png"), project_field_scenario_grazing_parameter_path(@project, @field, @scenario, grazing_parameter) %>
              <%= link_to image_tag("edit.png"), edit_project_field_scenario_grazing_parameter_path(@project, @field, @scenario, grazing_parameter) %>
              <%= link_to image_tag("delete.png"), project_field_scenario_grazing_parameter_path(@project, @field, @scenario, grazing_parameter), title: t('general.delete'), method: :delete, data: {confirm: t('general.confirm')} %>
              </td>
          </tr>
          <% i = i + 1 %>
        <% end %>
	   </tbody>
    </table>
  </div>
</div>
<%= link_to 'New Animal Transport', new_project_field_scenario_animal_transport_path(@project, @field, @scenario), :class => 'btn btn-success' %>
<%= link_to 'Back', edit_project_field_scenario_aplcat_parameter_path(@project, @field, @scenario, 1), :title => t('aplcat_tooltip.go_to_ap'), :class => 'btn btn-primary' %>
